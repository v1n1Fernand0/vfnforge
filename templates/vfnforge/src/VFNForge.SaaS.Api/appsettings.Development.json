{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "vfnforge-dev",
    "Audience": "vfnforge-api",
    "SigningKey": "DEV-ONLY-CHANGEME-SECRET-KEY",
    "RequireHttpsMetadata": false,
    "ValidateLifetime": false
  },
  "Tenancy": {
    "HeaderName": "X-Tenant-ID",
    "ClaimName": "tenant_id",
    "DefaultTenantId": "tenant-default",
    "RequireKnownTenant": true,
    "Tenants": [
      { "Id": "tenant-default", "Name": "Developer tenant" },
      { "Id": "tenant-sample", "Name": "Sample tenant" }
    ]
  }
}
